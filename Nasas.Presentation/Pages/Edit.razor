@page "/Edit"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit planet</title>
    <link rel="stylesheet" href="/css/ActionWithPlanet/edit/style.css" />
    <style></style>
</head>
<body>
    <header>
        <a href="/">
            <img src="/css/main/image/without fone.png"
                 class="logo"
                 alt="NASAS logo"
                 style="cursor: pointer" />
        </a>
    </header>

    <main class="add-page">
        <!-- Search bar -->
        <form class="search-bar">
            <input type="text" placeholder="Search planet..." />
            <button type="submit">Search</button>
        </form>

        <!-- Default image -->
        <div id="uploadImage" style="margin: 0 auto">
            <img src="/css/ActionWithPlanet/image/frage.png" class="img" />
        </div>
        <input type="file"
               id="fileInput"
               accept="image/*"
               style="display: none" />

        <h2>Edit a Planet</h2>

        <!-- Add planet form -->
        <form class="add-form">
            <label>
                Name:
                <input type="text" placeholder="Planet name" required />
            </label>
            <label>
                Mass:
                <input type="text" placeholder="Mass" required />
            </label>
            <label>
                Radius:
                <input type="text" placeholder="Radius" required />
            </label>
            <label>
                Age:
                <input type="text" placeholder="Age" required />
            </label>
            <label>
                Period:
                <input type="text" placeholder="Period" required />
            </label>
            <div style="display: flex; gap: 10px">
                <button type="button"
                        style="flex: 1"
                        onclick="window.location.href='/second_page/index.html'">
                    Cancel
                </button>
                <button type="submit" style="flex: 1">Edit Planet</button>
            </div>
        </form>
    </main>
    <script>
        const uploadDiv = document.getElementById("uploadImage");
        const fileInput = document.getElementById("fileInput");

        uploadDiv.addEventListener("click", () => {
            fileInput.click();
        });

        fileInput.addEventListener("change", (event) => {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function (e) {
                uploadDiv.innerHTML = `<img src="${e.target.result}" alt="Завантажене зображення" />`;
            };
            reader.readAsDataURL(file);
        });
    </script>
</body>
</html>


