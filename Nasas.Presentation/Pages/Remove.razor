@page "/Remove"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Deleting planet</title>
    <link rel="stylesheet" href="/css/ActionWithPlanet/remove/style.css">
</head>
<body>
    <header>
        <a href="/">
            <img src="/css/main/image/without fone.png"
                 class="logo"
                 alt="NASAS logo"
                 style="cursor: pointer" />
        </a>
    </header>

    <main class="add-page">
        <!-- Search bar -->
        <form class="search-bar">
            <input type="text" placeholder="Search planet..." />
            <button type="submit">Search</button>
        </form>

        <!-- Default image -->
        <div class="add-image">
            <img src="/css/ActionWithPlanet/image/frage.png" alt="Default planet image" />
        </div>

        <h2>Remove a Planet</h2>

        <!-- Add planet form -->
        <form class="add-form">

            <div style="display: flex; gap: 10px;">


                <button type="button" style="flex: 1;" onclick="window.location.href='/Second_Page'">Cancel</button>
                <button type="submit" style="flex: 1;">Edit Planet</button>
            </div>
        </form>
    </main>


</body>
</html>


